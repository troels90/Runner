<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundBlue"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.troels.runner.RunActivity">

        <TextView
            android:text="Old Coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_oldcoords"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="42dp" />

        <TextView
            android:text="Coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_coord"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:background="@drawable/roundedbutton"
            android:text=""
            android:drawableBottom="@drawable/starticon"
            android:drawablePadding="-15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Pace"
            android:layout_above="@+id/btn_start"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="71dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_DU4"
            android:text="meters"
            android:fontFamily="cursive"
            android:layout_alignBottom="@+id/tv_distance"
            android:layout_toEndOf="@+id/tv_DU" />

        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_DU5"
            android:layout_alignEnd="@+id/tv_coord" />

        <TextView
            android:textStyle="normal"
            android:textSize="25dp"
            android:paddingBottom="15dp"
            android:text="Distance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_DU"
            android:layout_above="@+id/tv_distance"
            android:layout_alignParentStart="true" />

        <TextView
            android:textStyle="normal"
            android:textSize="25dp"
            android:paddingBottom="15dp"
            android:text="Current Pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_DU2"
            android:layout_above="@+id/tv_Pace"
            android:layout_alignStart="@+id/tv_distance" />

        <TextView
            android:textStyle="normal"
            android:textSize="25dp"
            android:paddingBottom="15dp"
            android:text="Duration:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_DU5"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/tv_oldcoords"
            android:layout_alignEnd="@+id/tv_DU" />

        <TextView
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="min/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_Pace"
            android:layout_toEndOf="@+id/tv_Pace"
            android:id="@+id/tv_DU6" />

        <Button
            android:background="@drawable/roundedbutton"
            android:drawableBottom="@drawable/stopicon"
            android:drawablePadding="-15dp"
            android:id="@+id/btn_Stop"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:background="@drawable/roundedbutton"
            android:drawableBottom="@drawable/endicon"
            android:drawablePadding="-15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_End"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_Distance"
            android:layout_below="@+id/tv_oldcoords"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Choose running distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_above="@+id/tv_DU5"
            android:layout_toEndOf="@+id/tv_distance" />

    </RelativeLayout>