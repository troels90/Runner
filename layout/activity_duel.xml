<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundBlue"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.troels.runner.DuelActivity">

        <TextView
        android:text="Old Coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_oldcoords"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dp" />

    <TextView
        android:text="Coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_coord"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/roundedbutton"
        android:text=""
        android:drawableBottom="@drawable/starticon"
        android:drawablePadding="-15dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_duel_start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tv_duel_distance" />

    <Button
        android:background="@drawable/roundedbutton"
        android:drawableBottom="@drawable/endicon"
        android:drawablePadding="-15dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_duel_End"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_DU2"
        android:layout_alignStart="@+id/tv_duel_oldcoords" />

    <Button
        android:background="@drawable/roundedbutton"
        android:drawableBottom="@drawable/stopicon"
        android:drawablePadding="-15dp"
        android:id="@+id/btn_duel_Stop"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textStyle="normal"
        android:textSize="25dp"
        android:paddingBottom="15dp"
        android:text="Duration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_DU5"
        android:layout_alignBaseline="@+id/tv_duel_DU"
        android:layout_alignBottom="@+id/tv_duel_DU"
        android:layout_toEndOf="@+id/tv_duel_duelName" />

    <TextView
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_time"
        android:layout_below="@+id/tv_duel_DU5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_duel_DU5" />

    <TextView
        android:textStyle="normal"
        android:textSize="25dp"
        android:paddingBottom="15dp"
        android:text="Distance Left:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_DU"
        android:layout_above="@+id/tv_duel_distance"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Running against your friend "
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_hypeText"
        android:layout_below="@+id/tv_duel_oldcoords"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Friend"
        android:textSize="25dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_duelName"
        android:layout_below="@+id/tv_duel_hypeText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_distance"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_DU4"
        android:text="meters"
        android:layout_alignBaseline="@+id/tv_duel_distance"
        android:layout_alignBottom="@+id/tv_duel_distance"
        android:layout_alignStart="@+id/btn_duel_Stop" />

    <TextView
        android:text="MM:SS"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_TimeToBeat"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/btn_duel_End"
        android:layout_alignEnd="@+id/tv_duel_hypeText"
        android:layout_marginEnd="22dp" />

    <TextView
        android:text="Time to beat:"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_duel_hypetext2"
        android:layout_alignBaseline="@+id/tv_duel_TimeToBeat"
        android:layout_alignBottom="@+id/tv_duel_TimeToBeat"
        android:layout_alignParentStart="true" />

</RelativeLayout>